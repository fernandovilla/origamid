<Window x:Class="Teste.WPF.Sample_Binding_2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teste.WPF"
        mc:Ignorable="d"
        Title="Sample Binding #2" Height="170" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <Button Name="btnAddUser" Click="btnAddUser_Click">Add user</Button>
            <Button Name="btnChangeUser" Click="btnChangeUser_Click" Margin="0,5">Change user</Button>
            <Button Name="btnDeleUser" Click="btnDeleUser_Click">Delete user</Button>
        </StackPanel>
        <Border BorderThickness="2" BorderBrush="Indigo" CornerRadius="4">
            <ListBox Name="listUsers" DisplayMemberPath="Name"></ListBox>
        </Border>
    </DockPanel>
</Window>
