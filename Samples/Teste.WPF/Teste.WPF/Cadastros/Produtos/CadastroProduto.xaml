<Window x:Class="Teste.WPF.Cadastros.Produtos.CadastroProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teste.WPF.Cadastros.Produtos"
        xmlns:custom="clr-namespace:Teste.WPF.Customs"
        mc:Ignorable="d"
        Title="Cadastro Produto" Height="768" Width="1024" WindowState="Maximized">
    <Window.Resources>
        <SolidColorBrush x:Key="_BackgroundLightColor" Color="White"/>
        <SolidColorBrush x:Key="_ControlBackgroundColor" Color="White" />
        <SolidColorBrush x:Key="_TextColor" Color="#2C2C2C" />
        <SolidColorBrush x:Key="_LabelTextColor" Color="#3C3C3C" />
        <SolidColorBrush x:Key="_TextBoxFocused" Color="#6494ed"/>
        <SolidColorBrush x:Key="_BorderColor" Color="LightGray" />
        <SolidColorBrush x:Key="_BorderColorDark" Color="#2C2E20" />
        <SolidColorBrush x:Key="_BorderColor2" Color="#2C2C2C" />
        <SolidColorBrush x:Key="_BackgroundBlue" Color="#3F51B5"/>
        <SolidColorBrush x:Key="_BackgroundBlueMouseOver" Color="#2E40A4"/>
        <SolidColorBrush x:Key="_ButtonColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="_ButtonColorMouseOver" Color="#5D5D5D"/>
        <FontFamily x:Key="FontDefault">Calibri</FontFamily>

        <Style x:Key="ControlDefault" TargetType="{x:Type Control}">
            <Setter Property="FontFamily" Value="{DynamicResource FontDefault}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="{DynamicResource _ControlBackgroundColor}"/>
        </Style>

        <!-- Style TextBox -->
        <Style x:Key="TextBoxDefault" TargetType="{x:Type TextBox}" BasedOn="{StaticResource ControlDefault}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="{DynamicResource _TextColor}"/>
            <Setter Property="Typography.Capitals" Value="AllSmallCaps" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBoxBase}">
                        <Border 
                            Name="Border" 
                            CornerRadius="2" 
                            Padding="2" 
                            BorderThickness="1"
                            Background="{DynamicResource _ControlBackgroundColor}"
                            BorderBrush="{DynamicResource _BorderColor}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames 
                                                Storyboard.TargetName="Border"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="Yellow" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="ReadOnly">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames 
                                                Storyboard.TargetName="Border"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="Gray" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True" >
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource _TextBoxFocused}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxDefault}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="AllowDrop" Value="true" />
        </Style>

        <Style TargetType="{x:Type StackPanel}" x:Key="container">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Margin" Value="5,3"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="fieldLabel">
            <Setter Property="FontFamily" Value="{DynamicResource FontDefault}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource _LabelTextColor}" />
            <Setter Property="Typography.Capitals" Value="AllSmallCaps" />

        </Style>

        <Style x:Key="TextBoxButton" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxDefault}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border 
                            BorderBrush="LightGray" 
                            BorderThickness="1" 
                            CornerRadius="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="2,0,0,2">
                                    <TextBox BorderThickness="0" Margin="3,0,1,0">
                                        <TextBox.Style>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Typography.Capitals" Value="AllSmallCaps"/>
                                                <Setter Property="IsTabStop" Value="False"/>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>

                                <Border Grid.Column="1" CornerRadius="0,2,2,0">
                                    <Button x:Name="btnSearch">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Background" Value="Red"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Image Source="search16.png" 
                                   Width="12" 
                                   Height="12" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                                    </Button>
                                </Border>

                            </Grid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <!-- COMBOBOX -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <!-- PINTA O TOGGLEBUTTON QUANDO O MOUSE PASSA POR CIMA -->
                                <ColorAnimationUsingKeyFrames 
                                    Storyboard.TargetName="Border"
                                    Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                    <EasingColorKeyFrame KeyTime="0" Value="LightGray" />
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed" />
                        <VisualState x:Name="Disabled">
                            <Storyboard>
                                <!-- PINTA A SETA PARA BAIXO QUANDO COMBOBOX DESABILITADO -->
                                <ColorAnimationUsingKeyFrames 
                                    Storyboard.TargetName="Arrow"
                                    Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                                    <EasingColorKeyFrame KeyTime="0" Value="LightGray" />
                                </ColorAnimationUsingKeyFrames>

                                <!--PINTA O TOGGLEBUTTON QUANDO COMBOBOX DESABILITADO -->
                                <ColorAnimationUsingKeyFrames 
                                    Storyboard.TargetName="Border"
                                    Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                    <EasingColorKeyFrame KeyTime="0" Value="White" />
                                </ColorAnimationUsingKeyFrames>

                                <!-- PINTA AS BORDAS QUANDO COMBOBOX DESABILITADO -->
                                <ColorAnimationUsingKeyFrames 
                                    Storyboard.TargetName="Border"
                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
                                    <EasingColorKeyFrame KeyTime="0" Value="LightGray" />
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>

                    <VisualStateGroup x:Name="CheckStates">
                        <VisualState x:Name="Checked">
                            <Storyboard>
                                <!-- PINTA O TOGGLEBUTTON QUANDO O COMBOBOX É CLICADO E O POPUP APARECE -->
                                <ColorAnimationUsingKeyFrames 
                                    Storyboard.TargetName="Border"
                                    Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                    <EasingColorKeyFrame KeyTime="0" Value="LightGray" />
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Unchecked" />
                        <VisualState x:Name="Indeterminate" />
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <!-- DESENHA A BORDA AO REDOR DO COMBOBOX -->
                <Border x:Name="Border" 
                        Grid.ColumnSpan="2" 
                        CornerRadius="2" 
                        BorderThickness="1"
                        BorderBrush="{DynamicResource _BorderColor}"
                        Background="{DynamicResource _ControlBackgroundColor}" />

                <!--DESENHA UMA BORDA NO INTERIOR DO COMBOBOX PARA QUE ELE SEMPRE FIQUE BRANCO-->
                <Border Grid.Column="0" 
                        CornerRadius="2,0,0,2" 
                        Margin="1"                         
                        Background="{DynamicResource _ControlBackgroundColor}" />

                <!--DESENHA A SETA PARA BAIXO DO COMBOBOX-->
                <Path x:Name="Arrow"
                      Grid.Column="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M 0 0 L 4 4 L 8 0 Z" 
                      Fill="{DynamicResource _LabelColor}"/>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="{x:Type TextBox}">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}" />
        </ControlTemplate>

        <Style x:Key="{x:Type ComboBox}" TargetType="{x:Type ComboBox}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="MinHeight" Value="24" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver" />
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames 
                                                Storyboard.TargetName="PART_EditableTextBox"
                                                Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="Lime" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="EditStates">
                                    <VisualState x:Name="Editable">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames 
                                                Storyboard.TargetProperty="(UIElement.Visibility)"
                                                Storyboard.TargetName="PART_EditableTextBox">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames
                                                Storyboard.TargetProperty="(UIElement.Visibility)"
                                                Storyboard.TargetName="ContentSite">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Uneditable" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <ToggleButton x:Name="ToggleButton" 
                                          Template="{StaticResource ComboBoxToggleButton}"
                                          Grid.Column="2"
                                          Focusable="false"
                                          ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>

                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="3,3,23,3"
                                              VerticalAlignment="Stretch"
                                              HorizontalAlignment="Left">
                            </ContentPresenter>

                            <!--PAREI AQUI!!!!-->
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     Template="{StaticResource ComboBoxTextBox}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Bottom"
                                     Margin="3,3,23,3"
                                     Focusable="True"
                                     Background="Transparent"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}" />

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">

                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">

                                    <Border x:Name="DropDownBorder" 
                                            BorderThickness="1" 
                                            BorderBrush="LightGray" 
                                            Background="White"/>

                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                            </Trigger>
                            <Trigger SourceName="Popup" Property="AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0,0,2,2" />
                                <Setter TargetName="DropDownBorder" Property="Margin" Value="0,1,0,0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="{x:Type ComboBoxItem}" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border x:Name="Border" Padding="5" SnapsToDevicePixels="true" Background="Transparent" >
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected" />
                                    <!-- PINTA O ITEM SELECIONADO QUANDO ABRE O POPUP -->
                                    <VisualState x:Name="Selected">
                                        <!--<Storyboard>
                                            <ColorAnimationUsingKeyFrames 
                                                Storyboard.TargetName="Border"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="Yellow" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>-->
                                    </VisualState>
                                    <VisualState x:Name="SelectedUnfocused">
                                        <!--<Storyboard>
                                            <ColorAnimationUsingKeyFrames 
                                                Storyboard.TargetName="Border"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="Green" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>-->
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Panel.Background" Value="WhiteSmoke"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Panel.Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- LISTVIEWITEM -->
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Typography.Capitals" Value="AllSmallCaps"/>
            <Setter Property="Foreground" Value="{DynamicResource _LabelColor}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border x:Name="Border"
                                BorderThickness="0,0,0,2" 
                                Padding="10,10,10,0" 
                                BorderBrush="{DynamicResource _BorderColor}">
                            <Grid Height="30">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommomStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>
                                                <ColorAnimationUsingKeyFrames 
                                                    Storyboard.TargetName="HeaderBorder"
                                                    Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                    <EasingColorKeyFrame KeyTime="0" Value="BlueViolet"/>
                                                </ColorAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed"/>
                                        <VisualState x:Name="Disabled"/>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <!--<Border x:Name="HeaderBorder" BorderThickness="0,0,0,2" Padding="2,0,2,0">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="{StaticResource BorderColor}"/>
                                </Border.BorderBrush>
                                <Border.Background>
                                    <SolidColorBrush Color="{DynamicResource ControlBackgroundColor}"/>
                                </Border.Background>
                                <ContentPresenter x:Name="HeaderContent"
                                                  Margin="0,0,0,1"
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                
                            </Border>-->

                                <ContentPresenter x:Name="HeaderContent"
                                                  Margin="0,0,0,1"
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>

                                <!--<Thumb x:Name="PART_HeaderGripper"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,-9,0"
                                   Style="{StaticResource GridViewColumnHeaderGripper}" />-->
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Template">
                <Setter.Value >
                    <ControlTemplate>
                        <ScrollViewer>
                            <Border BorderThickness="3" Background="Red" />
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonDefault" TargetType="{x:Type Button}" >
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource _ButtonColor}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter 
                                x:Name="contentPresenter"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Content="{TemplateBinding Content}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource _ButtonColorMouseOver}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonMain" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonDefault}">
            <Setter Property="Background" Value="{DynamicResource _ButtonColor}"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="5,5"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="40"/>


        </Style>

        <Style x:Name="GridContainer" TargetType="{x:Type Control}">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="row1" Height="70" />
            <RowDefinition x:Name="row2" Height="*"/>
            <RowDefinition x:Name="row3" Height="80" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="0" Fill="WhiteSmoke" Height="{Binding ElementName=gridMain, Path=Height}" Grid.ColumnSpan="2"/>
        <!--<Image Grid.Row="0" Source="/Resources/quadrinhos.png" HorizontalAlignment="Right" />-->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,0,10" Grid.ColumnSpan="2">
            <Image Source="/Cadastros/Produtos/package32.png" Width="32" Height="32" />
            <StackPanel x:Name="panelTop" Orientation="Vertical" Margin="10,0" VerticalAlignment="Center">
                <TextBlock Text="Produto" Foreground="#2C3E50" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI"/>
                <TextBlock VerticalAlignment="Center" Text="Cadastro de mercadorias e serviços" Foreground="Gray" FontSize="12" FontFamily="Segoe UI" FontStyle="Italic"/>
            </StackPanel>
        </StackPanel>
        

        <Grid Grid.Row="1" Margin="0,10,0,0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TabControl Grid.Row="1">
                <TabControl.Resources>
                    <Style TargetType="TabControl">
                        <Setter Property="BorderBrush" Value="#eee"/>
                        <Setter Property="BorderThickness" Value="0,3,0,0"/>
                    </Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,3" BorderBrush="White" CornerRadius="0,0,0,0" Margin="3,-3" Padding="10,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="15,5"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#2C3E50" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#eee" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Geral">
                    <Grid VerticalAlignment="Top" Margin="10,5,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Style="{StaticResource container}">
                            <TextBlock Text="código" Style="{StaticResource fieldLabel}" />
                            <TextBox x:Name="codigo" FontSize="20" MaxLength="14" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="12"  Style="{StaticResource container}">
                            <TextBlock Text="produto" Style="{StaticResource fieldLabel}" />
                            <TextBox x:Name="nome" FontSize="20" MaxLength="80" />
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="12"  Style="{StaticResource container}">
                            <TextBlock Text="descrição completa" Style="{StaticResource fieldLabel}" />
                            <TextBox x:Name="descricao" FontSize="20" MaxLength="80" />
                        </StackPanel>

                        
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource container}">
                            <TextBlock Text="TIPO" Style="{StaticResource fieldLabel}"/>
                            <ComboBox>
                                <ComboBoxItem Content="PRODUTO" IsSelected="True"/>
                                <ComboBoxItem Content="SERVIÇO"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource container}">
                            <TextBlock Text="STATUS" Style="{StaticResource fieldLabel}"/>
                            <ComboBox>
                                <ComboBoxItem Content="NORMAL" IsSelected="True"/>
                                <ComboBoxItem Content="BLOQUEADO"/>
                                <ComboBoxItem Content="EXCLUÍDO"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="4" Style="{StaticResource container}">
                            <TextBlock Text="fabricante" Style="{StaticResource fieldLabel}"/>
                            <custom:TextBoxButtonSearch x:Name="txtFabricante" Click="txtFabricante_Click" Height="24"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="4" Style="{StaticResource container}">
                            <TextBlock Text="grupo / classificação" Style="{StaticResource fieldLabel}"/>
                            <custom:TextBoxButtonSearch x:Name="txtGrupo" Click="txtGrupo_Click" Loaded="txtGrupo_Loaded" Height="24" />
                        </StackPanel>



                        <StackPanel Grid.Row="3" Grid.ColumnSpan="12" Margin="0,15,0,5">
                            <TextBlock Text="estoque" Style="{StaticResource fieldLabel}" FontWeight="Bold" FontSize="16" />
                            <Rectangle  Fill="{StaticResource _BorderColor}" Height="1"  />
                        </StackPanel>

                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource container}">
                            <TextBlock Text="localizacao" Style="{StaticResource fieldLabel}"/>
                            <custom:TextBoxButtonSearch x:Name="txtLocalizacao" Click="txtLocalizacao_Click" Height="24"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource container}">
                            <TextBlock Text="estoque mínimo" Style="{StaticResource fieldLabel}"/>
                            <TextBox x:Name="txtEstoqueMinimo" />
                        </StackPanel>

                        
                        
                        
                        <StackPanel Grid.Row="5" Grid.ColumnSpan="12" Margin="0,15,0,5">
                            <TextBlock Text="precos" Style="{StaticResource fieldLabel}" FontWeight="Bold" FontSize="16"/>
                            <Rectangle  Fill="{StaticResource _BorderColor}" Height="1"  />
                        </StackPanel>

                        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource container}">
                            <TextBlock Text="preço custo" Style="{StaticResource fieldLabel}"/>
                            <TextBox Text="0,00" TextAlignment="Right"/>
                        </StackPanel>

                        <StackPanel Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource container}">
                            <TextBlock Text="preço venda" Style="{StaticResource fieldLabel}"/>
                            <TextBox Text="0,00" TextAlignment="Right"/>
                        </StackPanel>


                        <StackPanel Grid.Row="7" Grid.ColumnSpan="12" Margin="0,10,0,5">
                            <TextBlock Text="embalagens/pacotes" Style="{StaticResource fieldLabel}" FontWeight="Bold" FontSize="16"/>
                            <Rectangle  Fill="{StaticResource _BorderColor}" Height="1"  />
                        </StackPanel>
                        
                        <StackPanel 
                            Grid.Row="8" 
                            Grid.Column="0" 
                            Grid.ColumnSpan="12"                              
                            Style="{StaticResource container}">
                            <Border 
                                BorderBrush="LightGray" 
                                BorderThickness="1" 
                                CornerRadius="2">
                                <DockPanel 
                                    Height="140" 
                                    Name="panelEmbalagens">

                                    <StackPanel 
                                        DockPanel.Dock="Bottom"
                                        Margin="10,5">
                                        <TextBlock 
                                            FontSize="12"
                                            Text="Nova Embalagem" 
                                            Typography.Capitals="AllSmallCaps"
                                            HorizontalAlignment="Left"                                             
                                            TextDecorations="Underline"
                                            Cursor="Hand"
                                            Foreground="Blue" />
                                    </StackPanel>
                                    <ListView 
                                        x:Name="lstEmbalagens"
                                        Margin="5,0" 
                                        ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                        DockPanel.Dock="Top"
                                        SelectionChanged="lstEmbalagens_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>

                                                    </Grid.ColumnDefinitions>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Descição" Width="300" DisplayMemberBinding="{Binding Descricao}"/>
                                                <GridViewColumn Header="EAN" Width="200" DisplayMemberBinding="{Binding EAN}"/>
                                                <GridViewColumn Header="Quant." Width="150" DisplayMemberBinding="{Binding Quantidade}"/>
                                                <GridViewColumn Header="Act" Width="100" />
                                                <GridViewColumn  Width="1000"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </DockPanel>
                            </Border>
                        </StackPanel>


                    </Grid>
                </TabItem>

                <TabItem Header="Medicamento">
                    <Grid VerticalAlignment="Top" Margin="10,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </TabItem>

                <TabItem Header="Tributação"></TabItem>

                <TabItem Header="Imagens">
                    <Grid Grid.Column="10" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="3" Margin="5,5,5,5">
                        <DockPanel LastChildFill="True" VerticalAlignment="Stretch">
                            <TextBlock DockPanel.Dock="Top" Text="imagem" Style="{StaticResource fieldLabel}"/>
                            <Border DockPanel.Dock="Bottom" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="32"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource _BorderColor}">
                                        <Rectangle Grid.Column="0"/>
                                    </Border>
                                    <DockPanel Grid.Column="1" LastChildFill="False" Margin="2,2">
                                        <Button DockPanel.Dock="Top" Style="{StaticResource ButtonDefault}" Height="28" Margin="0,0,0,2">
                                            <Image Source="pack://application:,,,/Resources/cam18-line-white.png" Width="18" />
                                        </Button>

                                        <Button DockPanel.Dock="Top" Style="{StaticResource ButtonDefault}" Height="28" Margin="0,0,0,2">
                                            <Image Source="pack://application:,,,/Resources/media18-line-white.png" Width="18" />
                                        </Button>

                                        <Button DockPanel.Dock="Top" Style="{StaticResource ButtonDefault}" Height="28" Margin="0,0,0,2">
                                            <Image Source="pack://application:,,,/Resources/delete18-line-white.png" Width="18" />
                                        </Button>
                                    </DockPanel>
                                </Grid>
                            </Border>
                        </DockPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <Grid 
            Grid.Row="2" 
            Margin="10,10" 
            Background="{DynamicResource _ButtonColor}">
            <StackPanel
            VerticalAlignment="Center"
            Orientation="Horizontal"
            HorizontalAlignment="Center">
                <Button                                 
                    Style="{StaticResource ButtonMain}">
                    <StackPanel Orientation="Vertical" >
                        <Image Source="pack://application:,,,/Resources/save24_line.png" Width="28" />
                        <TextBlock Text="Salvar" HorizontalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button                                 
                Style="{StaticResource ButtonMain}">
                    <StackPanel Orientation="Vertical">
                        <Image Source="pack://application:,,,/Resources/cancel24-line-white.png" Width="28" />
                        <TextBlock Text="Cancelar" HorizontalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
